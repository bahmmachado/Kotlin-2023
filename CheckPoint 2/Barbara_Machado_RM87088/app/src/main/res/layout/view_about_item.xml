<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_ten"
    android:layout_marginTop="@dimen/margin_ten"
    style="@style/CardView"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_five"
        android:layout_marginVertical="@dimen/margin_fifteen"
        >

        <TextView
            android:id="@+id/about_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sinopse"
            />

        <TextView
            android:id="@+id/parental_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_item"
            android:layout_marginTop="@dimen/margin_fifteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about_value"
            tools:text="Classificação"
            />

        <TextView
            android:id="@+id/genre_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_item"
            android:layout_marginTop="@dimen/margin_fifteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/parental_value"
            tools:text="Gênero"
            />

        <TextView
            android:id="@+id/duration_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_item"
            android:layout_marginTop="@dimen/margin_fifteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genre_value"
            tools:text="Duração"
            />


        <TextView
            android:id="@+id/poster_available_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/poster_available_message_label"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/fontsize_title"
            app:layout_constraintTop_toBottomOf="@id/duration_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/poster_unavailable_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/poster_unavailable_message_label"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/fontsize_title"
            app:layout_constraintTop_toBottomOf="@id/duration_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>